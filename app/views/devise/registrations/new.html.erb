<div class="wrapper-page-new-quote">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 background-form">

        <h2>M'inscrire</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, label: "Adresse e-mail:" %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length), label: "Choisir votre mot de passe:", placeholder: '******', wrapper_html: { class: 'margin_password' } %>
<!--             <%= f.input :password_confirmation, required: true, label: "Confirmez votre mot de passe:", placeholder: '******' %> -->
          </div>

          <div class="form-actions">
            <div> <%= f.button :submit, "Continuer", class: 'btn default-button' %> </div>
            <%= f.input :remember_me, label:"Se souvenir de moi", :as => :boolean, wrapper_html: { class: 'margin_password' }, :inline_label => true if devise_mapping.rememberable?%>
          </div>
        <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
