<h2>Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, placeholder: "Prénom", label: false %>
    <%= f.input :last_name, required: true, placeholder: "Nom de famille", label: false %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Choisissez un mot de passe", label: false %>
    <%= f.input :password_confirmation, required: true, placeholder: "Confirmez votre mot de passe", label: false %>
    <%= f.input :email, required: true, placeholder: 'nom.prenom@exemple.com' %>
    <%= f.input :sex, as: :radio_buttons, collection: ["Homme", "Femme"], required: true %>
    <%= f.input :situation, collection: ["Célibtaire", "Marié", "Pacsé", "Veuf(ve)"], required: true %>
    <%= f.input :birth_date, required: true, :input_html => { :class => 'form-control datepicker' }, placeholder: "Date de naissance", label: false %>
    <%= f.input :nb_children, as: :radio_buttons, collection: ["0", "1", "2", "3", "4 ou plus"], required: true, placeholder: "Nombre d'enfant(s)", label: false %>
    <%= f.input :job, collection: User::JOBS, required: true, placeholder: "Profession", label: false %>

  </div>

  <div class="form-actions">
    <%= f.input :remember_me, inline_label: 'Se souvenir de moi' %>
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
