<div class="header">
  <div class="container header-homega">
    <h1><span class = "h-homega">H</span>omega</h1>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 cat-info">
          <h2>1. Informations personnelles</h2>


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, label: "Adresse e-mail:", placeholder: 'nom.prenom@exemple.com' %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length), label: "Choisir votre mot de passe:", placeholder: '******' %>
            <%= f.input :password_confirmation, required: true, label: "Confirmez votre mot de passe:", placeholder: '******' %>
          </div>

          <div class="form-actions">
            <div> <%= f.button :submit, "Continuer", class: 'btn default-button' %> </div>
            <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
          </div>
        <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
