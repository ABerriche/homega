<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">

        <h2>Inscription</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: true, label: "Prénom:" %>
            <%= f.input :last_name, required: true, label: "Nom de famille:" %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Choisir votre mot de passe:" %>
            <%= f.input :password_confirmation, required: true, label: "Confirmez votre mot de passe:" %>
            <%= f.input :email, required: true, label: "Adresse e-mail:", placeholder: 'nom.prenom@exemple.com' %>
            <%= f.input :sex, as: :radio_buttons, collection: ["Homme", "Femme"], required: true, label: "Sexe", item_label_class: "radio-inline", item_wrapper_tag: false %>
            <%= f.input :situation, collection: ["Célibtaire", "Marié", "Pacsé", "Veuf(ve)"], required: true, label: "Situation matrimoniale" %>
            <%= f.input :birth_date, required: true, :input_html => { :class => 'form-control datepicker' }, label: "Date de naissance" %>
            <%= f.input :nb_children, collection: ["0", "1", "2", "3", "4 ou plus"], required: true, label: "Nombre d'enfant(s)" %>
            <%= f.input :job, collection: User::JOBS, required: true, label: "Profession" %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
            <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
          </div>
        <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
