<div class="wrapper-page-new-quote">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 background-form">


<h2>Vous avez oublié votre mot de passe?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: "Adresse e-mail:", placeholder: 'steve.jobs@apple.com' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Réinitialiser mot de passe", class: 'btn default-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
    </div>
  </div>
</div>