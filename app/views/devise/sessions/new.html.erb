<div class="wrapper-page-new-quote">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 background-form">

  <h2>Me connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: "Adresse e-mail:" %>
      <%= f.input :password, required: false, label: "Mot de passe:", placeholder: '******' %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Me connecter", class: 'btn default-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
