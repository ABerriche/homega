<div class="wrapper-page-new-quote">
  <div class="container">

    <div class="row new-quote-right">
      <h1><%= @damage.place.name %> | <%= @damage.place.address %> | <%= @damage.category %></h1>
      <% @damage.photos.each do |photo| %>
        <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
      <% end %>

    <h4>Je suis disponible pour une intervention le :</h4>


    <div id="confirmation-rdv">

    </div>



    <%= simple_form_for :search, url: damage_bookings_path(@damage), :html => { :method => "get", :class => "form form-inline" }, remote: true do |f| %>
      <div class="form-group">
        <%= f.input :date, :input_html => { :class => 'form-control datepicker' }, placeholder: "Date souhaitée", label: false %>
      </div>
      <div class="form-group">
        <%= f.input :am_pm, collection: ["matin", "après-midi"], :input_html => { :class => 'form-control' }, placeholder: "matin ou après-midi", label: false %>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Search", class: "btn btn-default" %>
      </div>
    <% end %>

    <div id="liste-presta">

    </div>




    </div>


  </div>
</div>

