<div class="wrapper-page-new-quote">
  <div class="container">
    <div class="row new-quote-right">

            <h1 class="text-center title">Bienvenue chez Homega</h1>
      <div class="col-xs-12 col-sm-5">
          <div class="row place-form-designation">
            <h2 class="text-center">Vous êtes maintenant assuré, <br>vous pouvez télécharger votre contrat</h2>
          </div>
      </div>

      <div class="col-xs-12 col-sm-7 right devis">
              <div class="row">
                <div class="col-xs-12 zen">Résumé de votre contrat d'assurance</div>
              </div>
              <div class="row">
                <div class="col-xs-4 lighter">Prénom :</div>
                <div class="col-xs-8 lighter"><%= @place.user.first_name %></div>
              </div>
              <div class="row">
                <div class="col-xs-4 lighter">Nom :</div>
                <div class="col-xs-8 lighter"><%= @place.user.last_name %></div>
              </div>
              <div class="row">
                <div class="col-xs-4 lighter">Adresse :</div>
                <div class="col-xs-8 lighter"><%= @place.address %></div>
              </div>
              <div class="row">
                <div class="col-xs-4 zen">Formule Zen</div>
              </div>

              <div class="row">
                <div class="col-xs-4 lighter">Responsabilité civile :</div>
                <div class="col-xs-8 lighter">20M€</div>
              </div>
              <div class="row">
                <div class="col-xs-4 lighter">Défense pénale :</div>
                <div class="col-xs-8 lighter"><i class="fa fa-check" aria-hidden="true"></i></div>
              </div>
              <div class="row">
                <div class="col-xs-4 lighter">Assistance :</div>
                <div class="col-xs-8 lighter"><i class="fa fa-check" aria-hidden="true"></i></div>
              </div>
        </div>
        <div class="col-xs-12 col-sm-6">
        <div class="sign-doc">
          <div class="row">
            <div class="col-xs-12 col-sm-6 text-center">
              <div class="text-center">
              <%= link_to "Télécharger mon contrat", root_path, class: "btn default-button" %>
              </div>
            </div>
            <div class="col-xs-12 col-sm-6 text-center">
              <div class="text-center">
              <%= link_to "Retour à la page d'accueil", root_path, class: "btn default-button" %>
            </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

