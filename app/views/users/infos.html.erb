<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 cat-info">
          <h2>1. Informations personnelles</h2>


        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>

          <h3><%= @user.email %></h3>

          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: true, label: "Prénom:" %>
            <%= f.input :last_name, required: true, label: "Nom de famille:" %>
            <%= f.input :sex, as: :radio_buttons, collection: ["Homme", "Femme"], required: true, label: "Sexe:", item_label_class: "radio-inline", item_wrapper_tag: false %>
            <%= f.input :situation, collection: ["Célibataire", "Marié(e)", "Pacsé(e)", "Veuf(ve)"], required: true, label: "Situation matrimoniale:" %>
            <%= f.input :birth_date, required: true, label: "Date de naissance" , as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %>
            <%= f.input :nb_children, collection: ["0", "1", "2", "3", "4+"], required: true, label: "Nombre d'enfant(s):" %>
            <%= f.input :job, collection: User::JOBS, required: true, label: "Profession:" %>
            <%= f.hidden_field :next, value: "logement" %>
          </div>

          <div class="form-actions">
            <div> <%= f.button :submit, "Continuer", class: 'btn default-button', method: :patch %> </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="wrapper-page-new-quote">
  <div class="container">
    <div class="row new-quote-right">

      <form cf-form-element action="/places" method="post">

      <div class="col-xs-12 col-sm-5">
            <p class="text-center">Etape 1 sur 3</p>
          <div class="row place-form-designation">
            <h2 class="text-center">Quelques informations concernant votre logement...</h2>
          </div>
      </div>

      <div class="col-xs-12 col-sm-6 form-place">

          <%= form_for @place do |f| %>

            <%= f.label :sex, "Vous êtes un(e)s" %>
            <%= f.select :sex, ["Homme", "Femme"] %>

            <%= f.label :last_name, "Quel est votre nom de famille?" %>
            <%= f.text_field :last_name %>

            <%= f.label :first_name, "Quel est votre prénom?" %>
            <%= f.text_field :first_name %>

            <%= f.label :situation, "Vous êtes..." %>
            <%= f.select :situation, ["Célibataire", "Marié(e)", "Pacsé(e)", "Veuf(ve)"] %>

            <%= f.label :birth_date, "Quelle est votre date de naissance? (DD/MM/YYYY)" %>
            <%= f.date_field :birth_date %>

            <%= f.label :nb_children, "Combien d'enfants avez-vous?" %>
            <%= f.select :nb_children, ["0", "1", "2", "3", "4+"] %>


            <%= f.label :category, "Quel est le type de ce logement?" %>
            <%= f.select :category, ["Appartement", "Maison", "Hotel Particulier", "Chateau", "Loft"] %>
            <%= f.label :address, "A quelle adresse se situe-t-il?" %>
            <%= f.text_field :address %>

            <%= f.label :superficy, "Quelle est la superficie en m²?" %>
            <%= f.text_field :superficy %>

            <%= f.label :heating_type, "Quel est le type de chauffage?" %>
            <%= f.select :heating_type, ["Central", "Individuel"] %>

            <%= f.label :building_type, "Quel est le type de bâtiment?" %>
            <%= f.select :building_type, ["Neuf", "Ancien"] %>

            <%= f.label :kitchen_type, "Quel est le type de cuisinière?" %>
            <%= f.select :kitchen_type, ["Gaz", "Electricité"] %>

            <%= f.label :water_room, "Combien y a-t-il de pièces d'eau?" %>
            <%= f.text_field :water_room %>

            <%= f.label :floor, "A quel étage se situe le logement?" %>
            <%= f.select :floor, ["RDC", "Intermédiaire", "Dernier Etage"] %>

            <%= f.label :chimney, "Avez-vous une cheminée" %>
            <%= f.select :chimney, ["Oui", "Non"] %>

            <%= f.label :status, "Quel est votre statut?" %>
            <%= f.select :status, ["Locataire", "Co-locataire", "Propriétaire", "Propriétaire Non Occupant"] %>

            <%= f.label :trustee_reference, "Nom et adresse votre Syndic" %>
            <%= f.text_field :trustee_reference %>

            <%= f.submit :submit %>

          <% end %>
        </div>
    </div>
  </div>
</div>
