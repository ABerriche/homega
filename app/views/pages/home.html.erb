  <div class="wrapper-newz">
    <div class="wrapper-page-new-quote">
      <div class="container quotes-container">
        <div class="row">
          <div class="col-xs-12 new-quote-left">
            <h1>Dashboard</h1>
            <div class="steps">
              <!-- STEP 1 - Déja une assurance habitation? -->
              <div class="nb-global-step active" data-target="#step-1-contrat">
                <div class="step"><p><br>Mes contrats</p></div>
                <div class="underline active" id="underline-4"></div>
              </div>

              <!-- Step 2 - Date de début -->
              <div class="line-box"><div class="grey-line"></div></div>
              <div class="nb-global-step" data-target="#step-2-logement">
                <div class="step"><p><br>Mes logements</p></div>
                <div class="underline" id="underline-2"></div>
              </div>
              <!-- Step 3 - info pratiques -->
